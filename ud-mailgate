EX_TEMPFAIL = 75;
EX_PERMFAIL = 65;      # EX_DATAERR
Error = 'Message Error';
SeenKey = 0;
SeenDNS = 0;
mailRBL = {}
mailRHSBL = {}
mailWhitelist = {}
