SSHFingerprint = re.compile('^(\d+) ([0-9a-f\:]{47}) (.+)$')
SSHRSA1Match = re.compile('^^(.* )?\d+ \d+ \d+')

GenderTable = {"male": 1,
	       "1": 1,
	       "female": 2,
	       "2": 2,
	       "unspecified": 9,
	       "9": 9,
};

ArbChanges = {"c": "..",
	      "l": ".*",
	      "facsimileTelephoneNumber": ".*",
	      "telephoneNumber": ".*",
	      "postalAddress": ".*",
	      "postalCode": ".*",
              "loginShell": ".*",
              "emailForward": "^([^<>@]+@.+)?$",
              "jabberJID": "^([^<>@]+@.+)?$",
              "ircNick": ".*",
